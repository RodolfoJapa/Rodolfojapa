"""
Sistema de Análisis de Curtosis
Contexto de producción (simulado)

Objetivo:
- Generar datos sintéticos realistas
- Calcular curtosis y exceso de curtosis
- Clasificar el tipo de distribución
- Preparar salida estructurada para analítica
"""

import numpy as np
import pandas as pd
import logging
from scipy.stats import kurtosis
from datetime import datetime

# -----------------------------
# Configuración global (producción)
# -----------------------------

SEED = 42
N_REGISTROS = 10_000

np.random.seed(SEED)

logging.basicConfig(
    level=logging.INFO,
    format="%(asctime)s | %(levelname)s | %(message)s"
)

# -----------------------------
# Generación de datos sintéticos
# -----------------------------

def generar_datos(n: int) -> pd.DataFrame:
    """
    Genera datos sintéticos que simulan métricas reales
    (ej. ingresos, tiempos de respuesta, consumo).
    """
    logging.info("Generando datos sintéticos")

    datos = {
        "normal": np.random.normal(loc=100, scale=15, size=n),
        "leptocurtica": np.random.laplace(loc=100, scale=15, size=n),
        "platicurtica": np.random.uniform(low=50, high=150, size=n)
    }

    return pd.DataFrame(datos)


# -----------------------------
# Análisis estadístico
# -----------------------------

def clasificar_curtosis(valor: float) -> str:
    """
    Clasifica la distribución según la curtosis teórica.
    """
    if valor > 3:
        return "Leptocúrtica (colas pesadas)"
    elif valor < 3:
        return "Platicúrtica (colas ligeras)"
    else:
        return "Mesocúrtica (normal)"


def analizar_curtosis(df: pd.DataFrame) -> pd.DataFrame:
    """
    Calcula curtosis, exceso de curtosis y clasificación.
    """
    logging.info("Analizando curtosis")

    resultados = []

    for columna in df.columns:
        curt = kurtosis(df[columna], fisher=False)
        exceso = kurtosis(df[columna], fisher=True)

        resultados.append({
            "variable": columna,
            "curtosis": round(curt, 3),
            "exceso_curtosis": round(exceso, 3),
            "clasificacion": clasificar_curtosis(curt)
        })

    return pd.DataFrame(resultados)


# -----------------------------
# Pipeline principal
# -----------------------------

def ejecutar_pipeline():
    """
    Orquesta todo el flujo como en producción.
    """
    logging.info("Inicio del pipeline de análisis")

    df_datos = generar_datos(N_REGISTROS)
    df_resultados = analizar_curtosis(df_datos)

    timestamp = datetime.now().strftime("%Y%m%d_%H%M%S")

    # Persistencia (simulada)
    df_datos.to_csv(f"datos_sinteticos_{timestamp}.csv", index=False)
    df_resultados.to_csv(f"reporte_curtosis_{timestamp}.csv", index=False)

    logging.info("Pipeline finalizado correctamente")

    return df_datos, df_resultados


# -----------------------------
# Ejecución
# -----------------------------

datos, reporte = ejecutar_pipeline()

reporte
